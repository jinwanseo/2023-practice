// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  phone       String
  standByList StandBy[]

  @@unique([name, phone])
}

model StandBy {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  store     Store    @relation(fields: [storeId], references: [id])
  userId    Int
  storeId   Int
  token     String?
  state     String   @default("wait")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, storeId])
}

model Store {
  id          Int       @id @default(autoincrement())
  name        String
  number      String
  address     String
  photos      Photo[]
  standByList StandBy[]
  manager     Manager[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Manager {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  name      String
  phone     String
  email     String?
  store     Store    @relation(fields: [storeId], references: [id])
  storeId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Photo {
  id        Int      @id @default(autoincrement())
  fileUrl   String
  fileName  String
  store     Store    @relation(fields: [storeId], references: [id])
  storeId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
